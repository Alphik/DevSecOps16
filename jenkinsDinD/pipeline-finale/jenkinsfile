pipeline{
    agent any
    stages{
        stage('clone the code'){
            steps{
                sh "git clone https://github.com/hothaifa96/appp1 && mv appp1/app.py app.py"
            }
        }
        stage("verfy python version"){
            steps{
                echo "checking python version"
                sh "python3 --version"
            }
        }
        stage("install dependinces"){
            steps{
                sh "pip install flask --break-system-packages"
            }
        }
        stage("build"){
            steps{
                sh "python3 app.py&"             
            }
        }
         stage("test"){
            steps{
                dir('app'){
                    echo "testing"
                }
            }
        }
    }
   
}