pipeline{
    agent any
    stages{
        stage("verfy python version"){
            steps{
                echo "checking python version"
                sh "python3 --version"
            }
        }
        stage("install dependinces"){
            steps{
                sh "pip install flask --break-system-packages"
            }
        }
        stage("build"){
            steps{
                sh "cd app && ls"
                sh "ls"
                dir('app'){
                    sh "ls"
                    sh "python3 app.py"
                }
            }
        }
         stage("test"){
            steps{
                dir('app'){
                    echo "testing"
                }
            }
        }
    }
   
}