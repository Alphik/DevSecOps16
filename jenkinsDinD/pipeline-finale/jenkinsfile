pipeline{
    agent any
    stages{
        stage("verfy python version"){
            steps{
                echo "checking python version"
                sh "python --version"
            }
        }
        stage("install dependinces"){
            steps{
                sh "pip install flask"
            }
        }
        stage("build"){
            steps{
                dir('app'){
                    sh "python app.py"
                }
            }
        }
         stage("test"){
            steps{
                dir('app'){
                    echo "testing"
                }
            }
        }
    }
   
}